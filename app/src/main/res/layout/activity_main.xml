<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/hikerbackground" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="30dp" android:id="@+id/latitudeView"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="50dp"
            android:textAlignment="center" android:textSize="24sp" android:textColor="#F3F4F4"
            app:layout_constraintStart_toEndOf="@+id/latitude" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
    />
    <TextView
            android:text="Hiker'sWatch"
            android:layout_width="242dp"
            android:layout_height="61dp" android:id="@+id/textView"
            android:textStyle="bold" android:textAlignment="center"
            android:textSize="36sp" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Latitude"
            android:layout_width="132dp"
            android:layout_height="45dp" android:id="@+id/latitude"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="44dp"
            android:textAlignment="center" android:textSize="30sp" android:textColor="#F1F4F1"
            android:textStyle="bold"/>
    <TextView
            android:text="Longitude"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/longitude"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="112dp"
            android:textAlignment="center" android:textSize="30sp" android:textColor="#F8FAF6"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="216dp"
            android:layout_height="30dp" android:id="@+id/longitudeView"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="119dp"
            android:textAlignment="center" android:textSize="24sp" android:textColor="#F2F4F4"
            app:layout_constraintStart_toEndOf="@+id/longitude" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.769"/>
    <TextView
            android:text="Accuracy"
            android:layout_width="140dp"
            android:layout_height="57dp" android:id="@+id/accuracy"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="192dp"
            android:textAlignment="center" android:textSize="30sp" android:textColor="#F2F4EF"
            android:textStyle="bold"
    />
    <TextView
            android:layout_width="106dp"
            android:layout_height="30dp" android:id="@+id/accuracyView"
            android:textAlignment="center" android:textSize="24sp" android:textColor="#F2F0F3"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="205dp" app:layout_constraintStart_toEndOf="@+id/accuracy"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Address"
            android:layout_width="140dp"
            android:layout_height="57dp" android:id="@+id/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="288dp"
            android:textAlignment="center" android:textSize="30sp" android:textColor="#F2F4EF"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <TextView
            android:layout_width="305dp"
            android:layout_height="170dp" android:id="@+id/addressView"
            app:layout_constraintTop_toBottomOf="@+id/address"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#F4F0F4" android:textSize="24sp"
            android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>